@model Participant
@{
    ViewData["Title"] = "View";
}

<h2>ADD NEW ATHLETE TO TEST</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="@Model.TestId" value="@ViewBag.Test.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="ViewBag.Athlets" class="form-control"></select>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            @if (ViewBag.Test.Type == TestType.CooperTest)
            {
                <div class="form-group">
                    <label asp-for="DistanceResult" class="control-label"></label>
                    <input asp-for="DistanceResult" class="form-control" />
                    <span asp-validation-for="DistanceResult" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="TimeResult" class="control-label"></label>
                    <input asp-for="TimeResult" class="form-control" />
                    <span asp-validation-for="TimeResult" class="text-danger"></span>
                </div>

            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
