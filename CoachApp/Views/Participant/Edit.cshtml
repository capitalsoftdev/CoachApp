@model Participant
@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="ViewBag.Athlets" class="form-control"></select>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            @if (Model.Test.Type == TestType.CooperTest)
            {
                <div class="form-group">
                    <label asp-for="DistanceResult" class="control-label"></label>
                    <input asp-for="DistanceResult" value="@Model.DistanceResult" class="form-control" />
                    <span asp-validation-for="DistanceResult" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="TimeResult" class="control-label"></label>
                    <input asp-for="TimeResult" value="@Model.TimeResult" class="form-control" />
                    <span asp-validation-for="TimeResult" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Participant" asp-action="Delete" asp-route-id="@Model.Id">DELETE ATHLETE FROM TEST</a>
    <br/>
    <a asp-controller="Test" asp-action="Details" asp-route-id="@Model.TestId">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}